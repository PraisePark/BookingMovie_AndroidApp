<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginRight="10dp"
            android:text="@string/book_number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#AA1212"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="21873821794891"
            android:id="@+id/myticket_list_col_b_number"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FCFCFC">

        <TableLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="253dp"
            android:stretchColumns="1"
            android:padding="5dp">

            <TableRow>
                <TextView
                    android:layout_span="2"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:id="@+id/myticket_list_col_movietitle"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:text="영화관"
                    android:textColor="#8D8D8D"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:id="@+id/myticket_list_col_theater"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:text="상영관"
                    android:textColor="#8D8D8D"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:id="@+id/myticket_list_col_screen"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:text="관람일"
                    android:textColor="#8D8D8D"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:id="@+id/myticket_list_col_showdate"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:text="상영시간"
                    android:textColor="#8D8D8D"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:id="@+id/myticket_list_col_inning"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:text="좌석"
                    android:textColor="#8D8D8D"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:id="@+id/myticket_list_col_seat"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"/>
            </TableRow>

            <TableRow>
                <Button
                    android:id="@+id/myticket_list_col_diary_btn"
                    android:layout_span="2"
                    android:text="@string/movie_diary"/>
            </TableRow>

            <TableRow>
                <Button
                    android:id="@+id/myticket_list_col_cancel_btn"
                    android:layout_span="2"
                    android:text="@string/cancel_book"/>
            </TableRow>

        </TableLayout>

        <ImageView
            android:layout_width="168dp"
            android:layout_height="253dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/avengers_350"
            android:id="@+id/myticket_list_col_poster"/>

    </LinearLayout>


</LinearLayout>
