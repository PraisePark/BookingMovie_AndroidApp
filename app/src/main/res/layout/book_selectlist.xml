<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#EAEAEA"
        android:id="@+id/bookselectlist_date_btn">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="bottom"
                android:paddingLeft="10dp"
                android:textColor="#606060"
                android:textSize="13sp"
                android:text="@string/bookselectitem_date"
                android:id="@+id/bookselectlist_date"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="top"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:textSize="20sp"
                android:text="@string/bookselectnone_date"
                android:id="@+id/bookselectlist_selected_date"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="5"
            android:gravity="center"
            android:textColor="#AA1212"
            android:textSize="30sp"
            android:text="go"
            android:id="@+id/bookselectlist_go_date"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:id="@+id/bookselectlist_theater_btn">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="bottom"
                android:paddingLeft="10dp"
                android:textColor="#606060"
                android:textSize="13sp"
                android:text="@string/bookselectitem_theater"
                android:id="@+id/bookselectlist_theater"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="top"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:textSize="20sp"
                android:text="@string/bookselectnone_theater"
                android:id="@+id/bookselectlist_selected_theater"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="5"
            android:gravity="center"
            android:textColor="#AA1212"
            android:textSize="30sp"
            android:text="go"
            android:id="@+id/bookselectlist_go_theater"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#EAEAEA"
        android:id="@+id/bookselectlist_movie_btn">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="bottom"
                android:paddingLeft="10dp"
                android:textColor="#606060"
                android:textSize="13sp"
                android:text="@string/bookselectitem_movie"
                android:id="@+id/bookselectlist_movie"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="top"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:textSize="20sp"
                android:text="@string/bookselectnone_movie"
                android:id="@+id/bookselectlist_selected_movie"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="5"
            android:gravity="center"
            android:textColor="#AA1212"
            android:textSize="30sp"
            android:text="go"
            android:id="@+id/bookselectlist_go_movie"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:id="@+id/bookselectlist_others_btn">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="bottom"
                android:paddingLeft="10dp"
                android:textColor="#808080"
                android:textSize="13sp"
                android:text="@string/bookselectitem_others"
                android:id="@+id/bookselectlist_others"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="top"
                android:paddingLeft="10dp"
                android:textColor="#808080"
                android:textSize="20sp"
                android:text="@string/bookselectnone_others"
                android:id="@+id/bookselectlist_selected_others"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="5"
            android:gravity="center"
            android:textColor="#808080"
            android:textSize="30sp"
            android:text="go"
            android:id="@+id/bookselectlist_go_others"/>
    </LinearLayout>

</LinearLayout>
