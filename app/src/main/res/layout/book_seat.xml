<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <TableLayout
        android:background="#EAEAEA"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:stretchColumns="1">
        <TableRow>
            <TextView
                android:layout_marginLeft="10dp"
                android:textColor="#000000"
                android:id="@+id/book_seat_screen"/>
            <TextView
                android:layout_marginLeft="20dp"
                android:textColor="#000000"
                android:id="@+id/book_seat_time"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:textColor="#000000"
                android:text="@string/book_time_remainderseat"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#AA1212"
                android:textSize="18dp"
                android:text="99"
                android:id="@+id/book_seat_remainder"/>
            <TextView
                android:layout_marginLeft="3dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text=" /100"/>
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <TableRow>
            <TextView
                android:gravity="center"
                android:textColor="#D5D5D5"
                android:textStyle="bold"
                android:textSize="20sp"
                android:background="#FFFFFF"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="@string/book_adult"
                android:id="@+id/book_seat_adult_text"/>
            <TextView
                android:gravity="center"
                android:textColor="#AA1212"
                android:textSize="20sp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#A6A6A6"
                android:text="@string/book_plus"
                android:id="@+id/book_seat_plus_adult"/>
            <TextView
                android:gravity="center"
                android:textColor="#D5D5D5"
                android:textStyle="bold"
                android:textSize="20sp"
                android:background="#FFFFFF"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="@string/book_teen"
                android:id="@+id/book_seat_teen_text"/>
            <TextView
                android:gravity="center"
                android:textColor="#AA1212"
                android:textSize="20sp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#A6A6A6"
                android:text="@string/book_plus"
                android:id="@+id/book_seat_plus_teen"/>
        </TableRow>
        <TableRow>
            <TextView
                android:gravity="center"
                android:textColor="#D5D5D5"
                android:textStyle="bold"
                android:textSize="20sp"
                android:background="#FFFFFF"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:id="@+id/book_seat_adult_num"
                android:text="0"/>
            <TextView
                android:gravity="center"
                android:textColor="#AA1212"
                android:textSize="20sp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#D5D5D5"
                android:text="@string/book_minus"
                android:id="@+id/book_seat_minus_adult"/>
            <TextView
                android:gravity="center"
                android:textColor="#D5D5D5"
                android:textStyle="bold"
                android:textSize="20sp"
                android:background="#FFFFFF"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:id="@+id/book_seat_teen_num"
                android:text="0"/>
            <TextView
                android:gravity="center"
                android:textColor="#AA1212"
                android:textSize="20sp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#D5D5D5"
                android:text="@string/book_minus"
                android:id="@+id/book_seat_minus_teen"/>
        </TableRow>
    </TableLayout>

    <com.ajoumedia.bookingmovie.BookSelectSeat_GraphicView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/book_seat_graphic"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#EAEAEA"
                android:textColor="#000000"
                android:id="@+id/book_seat_selected_seat_str"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#FFFFFF"
                android:gravity="center_vertical">

                <TextView
                    android:paddingLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="@string/book_pay"/>

                <TextView
                    android:paddingLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:textColor="#AA1212"
                    android:textStyle="bold"
                    android:text="20,000"
                    android:id="@+id/book_seat_pay"/>

                <TextView
                    android:paddingLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="@string/book_won"/>


            </LinearLayout>

            
        </LinearLayout>
        
        <TextView
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:gravity="center"
            android:text="@string/book_selectfinish"
            android:background="#AA1212"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="30sp"
            android:id="@+id/book_seat_select_finish_btn"/>

    </LinearLayout>


</LinearLayout>
